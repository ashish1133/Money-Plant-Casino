# Lucky Casino Backend Environment Example
# Copy to .env and adjust values.

# Server
PORT=3000
NODE_ENV=production

# CORS: comma-separated list of allowed frontend origins
# Example: CORS_ORIGINS=https://casino.example,https://casino.github.io
CORS_ORIGINS=http://localhost:8000

# JWT Secrets (use long random strings in production)
JWT_ACCESS_SECRET=replace_with_long_random_access_secret
JWT_REFRESH_SECRET=replace_with_long_random_refresh_secret

# Token expirations
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Database (SQLite file path)
SQLITE_DB_PATH=./data/casino.db

# Logging level
LOG_LEVEL=info
